# set the colors for the prompt
set red="%{\033[0;31m%}"
set green="%{\033[0;32m%}"
set yellow="%{\033[0;33m%}"
set blue="%{\033[0;34m%}"
set purple="%{\033[0;35m%}"
set cyan="%{\033[0;36m%}"
set white="%{\033[0;37m%}"
set reset="%{\033[0m%}"

set prompt="${red}%n:${yellow}%~${purple} >> ${cyan} "

set nolist

# Some useful aliases

alias cdl "cd \!* && ll -ltr && pwd"

setenv XXX gnome-256color
source ~/.inputrc


